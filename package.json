{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals.",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test nyc mocha --reporter spec --timeout 15000 --require @babel/register ./server_db/tests/*.js --exit",
    "coverage": "nyc --reporter=html --reporter=text --reporter=lcov mocha --reporter spec --require @babel/register ./server/tests/*.js --exit",
    "coveralls": "npm run coverage -- --report lcovonly && cat coverage/lcov.info | coveralls",
    "start-dev": "nodemon --require @babel/register server.js",
    "start": "node --require @babel/register server.js",
    "mig": "babel-node ./server_db/models/migrate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/czarjulius/Banka.git"
  },
  "author": "Julius Ngwu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/czarjulius/Banka/issues"
  },
  "homepage": "https://github.com/czarjulius/Banka#readme",
  "dependencies": {
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.9.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "chai": "^4.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2",
    "nyc": "^13.3.0"
  }
}
